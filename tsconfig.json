{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["./src/*"],
      "@/tests/*": ["./tests/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
